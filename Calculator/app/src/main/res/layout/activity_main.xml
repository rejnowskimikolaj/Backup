<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.calculator.MainActivity">




    <EditText
        android:text="@string/edit_give_number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/number1"
        android:layout_above="@+id/number2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <EditText
        android:text="@string/edit_give_number"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_above="@+id/button_sum"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="27dp"
        android:id="@+id/number2" />
    <Button
        android:text="@string/button_divide"
        android:layout_height="wrap_content"
        android:id="@+id/button_divide"
        android:onClick="onDivideClick"

        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp" />




    <Button
        android:text="@string/button_multiply"
        android:layout_height="wrap_content"
        android:id="@+id/button_multiply"
        android:onClick="onMultiplyClick"

        android:layout_width="match_parent"
        android:layout_above="@+id/button_divide"
        android:layout_alignParentStart="true"

        />

    <Button
        android:text="@string/button_sum"
        android:layout_height="wrap_content"
        android:id="@+id/button_sum"
        android:onClick="onSumClick"
        android:layout_width="match_parent"
        android:layout_above="@+id/button_substract"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/button_substract"
        android:layout_height="wrap_content"
        android:id="@+id/button_substract"
        android:onClick="onSubstractClick"

        android:layout_width="match_parent"
        android:layout_above="@+id/button_multiply"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:id="@+id/result"

        android:layout_centerVertical="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_multiply"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:id="@+id/go_to_service_activity"
        android:onClick="goToServiceActivity"
        android:text="service" />


</RelativeLayout>
