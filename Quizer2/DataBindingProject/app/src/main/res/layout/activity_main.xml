<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

        <variable
            name="maciek"
            type="com.example.rent.databindingproject.Student"
        ></variable>

        <variable
            name="student"
            type="com.example.rent.databindingproject.Student"
            ></variable>
    </data>
<LinearLayout

    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rent.databindingproject.MainActivity">

    <TextView
        android:text="@{maciek.firstName}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_first_name_text_view" /><![CDATA[

    />

    ]]>

    <TextView
        android:text="@{maciek.lastName}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_last_name_text_view" />

    <TextView
        android:text="@{String.valueOf(maciek.indexNumber)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_index_text_view"

        />

    <Button
        android:text="Clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clearButton" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@{student.firstName}"
        android:ems="10"
        android:hint="first name"
        android:id="@+id/main_first_name_edit_text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@{student.lastName}"
        android:ems="10"
        android:hint="last name"

        android:id="@+id/main_last_name_edit_text" />


    <Button
        android:text="Add person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addButton" />

    <LinearLayout
        android:id="@+id/student_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>


</LinearLayout>
</layout>
