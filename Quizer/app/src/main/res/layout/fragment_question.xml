<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.quizer.QuestionFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:text="There will be a question blablablabla?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:id="@+id/question_fragment_questionTextView"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <Button
        android:text="Answer A"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:id="@+id/question_fragment_answer_a"
        android:textSize="14sp"
        android:layout_below="@+id/question_fragment_questionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_width="100dp" />

    <Button
        android:text="Answer B"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/question_fragment_answer_a"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="77dp"
        android:id="@+id/question_fragment_answer_b"
        android:layout_width="100dp" />

    <Button
        android:text="Answer C"
        android:layout_marginTop="96dp"
        android:id="@+id/question_fragment_answer_c"
        android:layout_below="@+id/question_fragment_answer_a"
        android:layout_alignStart="@+id/question_fragment_answer_a"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <Button
        android:text="Answer D"
        android:layout_height="100dp"
        android:id="@+id/question_fragment_answer_d"
        android:layout_width="100dp"
        android:layout_alignTop="@+id/question_fragment_answer_c"
        android:layout_alignStart="@+id/question_fragment_answer_b" />
</RelativeLayout>
